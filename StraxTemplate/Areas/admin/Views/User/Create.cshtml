@model CustomUser
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="User" asp-action="create" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" color="text-danger"> </span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

