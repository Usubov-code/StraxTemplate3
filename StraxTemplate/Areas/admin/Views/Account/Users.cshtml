@model VmUser
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <a asp-area="admin" asp-controller="Service" asp-action="create" class="btn btn-primary">Create</a>
        </div>
        <hr />
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">UserName</th>
                        <th scope="col">Name</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model.CustomUsers)
                    {
                        i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.UserName</td>
                        <td>@item.Name</td>
                        <td>@Model.UserRoles.FirstOrDefault(ur=>ur.Key==item.Id).Value</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td> </td>
                        <td>
                            <a asp-area="admin" asp-controller="account" asp-action="usersupdate" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                            <a asp-area="admin" asp-controller="account" asp-action="usersdelete" asp-route-id="@item.Id" onclick="return confirm('Are you sure ?')" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>}

                </tbody>
            </table>
        </div>
    </div>
</div>




