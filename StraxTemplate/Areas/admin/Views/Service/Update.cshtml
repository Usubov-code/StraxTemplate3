@model Service
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="Service" asp-action="update" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label asp-for="@Model.BannerText" class="form-label">Banner Text</label>
                    <input class="form-control" asp-for="@Model.BannerText">
                    <span asp-validation-for="@Model.BannerText" color="text-danger"> </span>

                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" color="text-danger"> </span>

                    <label asp-for="@Model.Category.Name" class="form-label">Category Name</label>
                    <input class="form-control" asp-for="@Model.Category.Name">
                    <span asp-validation-for="@Model.Category.Name" color="text-danger"> </span>

                    <label asp-for="@Model.CustomUsers.Name" class="form-label">User Name</label>
                    <input class="form-control" asp-for="@Model.CustomUsers.Name">
                    <span asp-validation-for="@Model.CustomUsers.Name" color="text-danger"> </span>


                    <label asp-for="@Model.DesingType.ImageFile" class="form-label">Desing Type </label>
                    <input class="form-control" asp-for="@Model.DesingType.ImageFile">
                    <span asp-validation-for="@Model.DesingType.ImageFile" color="text-danger"> </span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>


